<Window x:Class="QuestionAnsweringSystem.Answering"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Icon="icon.jpg"
        Title="AnsweringSystem" Height="500" Width="700" >
    <Grid>
        <Grid Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="6*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <TextBlock Name="tbQuestion" Style="{StaticResource MaterialDesignBody2TextBlock}"  Margin="25,25,25,0"
                                 TextWrapping="Wrap" MaxWidth="500" />
            <TextBox Name="tbAnswer" Style="{StaticResource MaterialDesignFilledTextFieldTextBox}" Margin="25,25,25,0"
                      TextWrapping="Wrap" MaxWidth="650" Grid.Row="1" Padding="20"/>
            <Button Name="btUpLoad" Content="UpLoad" Grid.Row="2" Margin="80,0,80,0" Click="btUpLoad_Click"/>
        </Grid>
    </Grid>
</Window>
